<title>Ficha</title>
<b>Logado como: {{session.name}}</b>
<hr>
<body>
    <h3>Nova Ficha</h3>
    <hr>
    <form action="/cadastra-ficha" method="post">
         <input type="hidden" id="id" name="id" value="{{session.userId}}">
        <label for="name">Name</label><br>
        <input type="text" id="name" name="name" value=""><br>
        <br>
        <label for="clan">Clã</label><br>
        <input type="text" id="clan" name="clan" value=""><br>
        <br>
        <label for="origin">Origem</label><br>
        <input type="text" id="origin" name="origin" value=""><br>
        <br>
        <label for="aspect">Aspecto</label><br>
        <select id="aspect" name="aspect">
            <option value="none" selected>Nenhum</option>
            <option value="dermossa">Dermossa</option>
            <option value="dianceth">Dianceth</option>
            <option value="sahari">Sahari</option>
            <option value="shenghuo">Sheng-Huo</option>
            <option value="ulfihild">Ulfihild</option>
        </select><br>
        <br>
        <label for="class">Classe</label><br>
        <input type="text" id="class" name="class" value=""><br>
        <br>
        <label for="level">Nível</label><br>
        <input type="number" id="level" name="level" value=""><br>
        <br>
        <label for="language">Idiomas</label><br>
        <textarea id="language" name="language" rows="4" cols="30" maxlength="120"></textarea><br>
        <br>
        <label for="description">Descrição</label><br>
        <textarea id="description" name="description" rows="10" cols="50" maxlength="500"></textarea><br>
        <br>
        <input type="submit" value="Continuar">
    </form>
</body>



